{
  "name": "express-api",
  "version": "1.0.0",
  "description": "Express API with Docker and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "docker:dev": "docker compose --profile dev up api-dev --build",
    "docker:prod": "docker compose up --build ",
    "docker:down": "docker kill $(docker ps -q) 2>/dev/null; docker compose down --remove-orphans",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["express", "api", "docker", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
